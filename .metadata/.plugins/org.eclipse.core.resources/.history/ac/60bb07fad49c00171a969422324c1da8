		Connection c = null;
		try {
			Class.forName(driver);
			c = (Connection) DriverManager.getConnection(url, username, password);
			
		}catch(Exception e) {
			System.err.println(e.getClass().getName() + ": " + e.getMessage());
			System.exit(0);
		}
		return c;
	}
	
